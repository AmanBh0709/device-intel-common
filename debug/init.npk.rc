on early-boot
    # setup configfs
    mount configfs configfs /sys/kernel/config
    mkdir /sys/kernel/config/stp-policy/sth
    write /sys/kernel/config/stp-policy/sth/device 0-sth

    # masters/channels allocation
    mkdir /sys/kernel/config/stp-policy/sth/console
    write /sys/kernel/config/stp-policy/sth/console/masters "256 259"
    write /sys/kernel/config/stp-policy/sth/console/channels "7 10"
    mkdir /sys/kernel/config/stp-policy/sth/user
    write /sys/kernel/config/stp-policy/sth/user/masters "260 1023"
    write /sys/kernel/config/stp-policy/sth/user/channels "0 127"

service init_npk /system/bin/init.npk.sh
    # execute only once, after data is decrypted and persist properties are set
    class late_start
    oneshot

service ap_lognpk /system/bin/logcat_ep.sh /system/bin/logcatext -b main -b system -b radio -b events -b crash -x
    disabled

on property:npk.cfg.update=*
    setprop persist.npk.cfg ${npk.cfg.update}
    start init_npk
